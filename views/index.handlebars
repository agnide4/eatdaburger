
    <div class="jumbotron text-center">
        <h1>Eat-Da-BUrger</h1>
        <p>Enter your favorite burger to add it to the menu and devour it whenever you like</p> 
      </div>
    <div class="container">
        <div class="row">
            <div class="col-md-6 menu">
                <div class="panel panel-defaut">
                    <div class="panel-heading"><h3>Burgers ready to be devoured</h3></div>
                    <div class="panel-body">
                        <ul>
                            {{#each burgers}}
                            {{#unless devoured}}
                            <span>{{this.id}} - {{this.burgerName}}</span>
                            <button type="button" class="devour" data-id="{{this.id}}"
                                    data-newDevoured="{{devour}}">Devour it</button>
                            <hr>
                            {{/unless}}
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-6 devoured">
                <div class="panel panel-defaut">
                    <div class="panel-heading"><h3>Burgers in your belly</h3></div>
                    <div class="panel-body">
                        <ul>
                            {{#each burgers}}
                            {{#if devoured}}
                            <span>{{this.id}} - {{this.burgerName}}</span>
                            <button type="button" class="trashit" data-id="{{this.id}}"
                                    data-newDevoured="{{devour}}">Get it out</button>
                            <hr>
                            {{/if}}
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <form id="me">
        <div class="form-group burgerWish">
            <label for="Burgers">What do you want to eat?:</label>
            <textarea class="form-control" rows="3" id="newBurger"></textarea>
        </div>
            <button type="submit" class="btn btn-primary btn-block orderBurger">Add burger to menu</button>

        </form>
        
    </div>
    
